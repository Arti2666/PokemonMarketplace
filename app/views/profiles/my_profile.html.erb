<h1>Profile</h1>
<div class="header-btn">
  <%= link_to "GO TO MARKETPLACE", pokemons_path %>
</div>
<h2><%= current_user.username.present? ? current_user.username : current_user.email %></h2>

<h2>Mes locations</h2>


<% current_user.pokemon_rented.each do |pokemon| %>
  <%= pokemon.name %> => <%= check_pseudo(pokemon, @users) %>
  <br>
<% end %>

<br>

<h2>Mes pokemons a louer</h2>

<% @pokemons.each do |pokemon| %>
  <%= pokemon.name %>
  <%= pokemon.reserved ? "RENTED" : "AVAILABLE" %>
  <br>
<% end %>
